                                        <TextBox Text="{Binding CarMotorcode}" BorderThickness="0,0,0,1" BorderBrush="#41b1e1" Background="#198E916F"  Foreground="Black" Width="100" FontSize="12" />
                                        <TextBox Text="{Binding CarRentalPrice}" BorderThickness="0,0,0,1" BorderBrush="#41b1e1" Background="#198E916F"  Foreground="Black" Width="100" FontSize="12"/>
                                        <TextBox Text="{Binding CarQuantity}" BorderThickness="0,0,0,1" BorderBrush="#41b1e1" Background="#198E916F"  Foreground="Black" Width="100" FontSize="12" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="120">
                                        <Image Source="{Binding CarPhotoPath}" Margin="0,20,0,0"/>
                                        <Button Content="Modify"></Button>
                                        <Button Content="Delete"></Button>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label Content="New car" Grid.Row="0" Grid.Column="1" FontSize="26"></Label>
                    <Grid Grid.Row="1" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
