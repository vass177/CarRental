                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Content="Car type" FontSize="20" Grid.Row="0" Grid.Column="0"></Label>
                        <Label Content="Car photo" FontSize="20" Grid.Row="1" Grid.Column="0"></Label>
                        <Label Content="Car horsepower" FontSize="20" Grid.Row="3" Grid.Column="0"></Label>
                        <Label Content="Car capacity" FontSize="20" Grid.Row="4" Grid.Column="0"></Label>
                        <Label Content="Car motorcode" FontSize="20" Grid.Row="5" Grid.Column="0"></Label>
                        <Label Content="Car rental price" FontSize="20" Grid.Row="6" Grid.Column="0"></Label>
                        <Label Content="Car quantity" FontSize="20" Grid.Row="7" Grid.Column="0"></Label>
                        <Label Content="Car category" FontSize="20" Grid.Row="8" Grid.Column="0"></Label>
