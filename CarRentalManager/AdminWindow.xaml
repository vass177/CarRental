                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Content="Clients" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" FontSize="35" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <ListBox x:Name="clientListBox" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="5" Background="#33F7F7F7" Margin="0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Background="#198E916F" Margin="5,1,0,1" UseLayoutRounding="True" >
                                    <StackPanel Orientation="Vertical">
                                        <Label Content="Full name: " Foreground="Black" FontSize="20" FontWeight="Bold" />
                                        <Label Content="User name: " Foreground="Black" FontSize="16" FontWeight="Bold"/>                                        
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="150">
                                        <Label Content="{Binding ClientName}" Foreground="Black" FontSize="20" />
                                        <Label Content="{Binding UserName}" Foreground="Black" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="250">
                                        <Label Content="Address" Foreground="Black" FontSize="20" FontWeight="Bold"/>
                                        <Label Content="{Binding ClientAddress}" FontSize="18"/>
                                        <Label Content="Discount: " HorizontalContentAlignment="Right" Foreground="Black" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="250">
                                        <Label Content="E-mail" Foreground="Black" FontSize="20" FontWeight="Bold"/>
                                        <Label Content="{Binding ClientEmail}" FontSize="18"/>
                                        <ProgressBar Maximum="100" Value="{Binding ClientDiscountStatus}" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" Margin="0,12,0,0"></ProgressBar>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Border Margin="150,20" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Background="White" CornerRadius="20,20,20,20" BorderThickness="2,2,2,2">
                        <Grid Margin="20,10" Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Content="Client details" FontSize="24" Foreground="#FF858585" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" FontWeight="ExtraBlack"></Label>
                            <Label Grid.Column="0" Grid.Row="1" Content="Name" FontSize="20" Foreground="#FF858585" FontWeight="ExtraBlack"></Label>
                            <Label Grid.Column="0" Grid.Row="2" Content="Address" FontSize="20" Foreground="#FF858585" FontWeight="ExtraBlack"></Label>
                            <Label Grid.Column="0" Grid.Row="3" Content="Email" FontSize="20" Foreground="#FF858585" FontWeight="ExtraBlack"></Label>
                            <TextBox Text="{Binding SelectedClient.ClientName}" x:Name="clientName" Grid.Column="1" Grid.Row="1" FontSize="18"  VerticalContentAlignment="Center" BorderThickness="0,0,0,2" BorderBrush="#FF41B1E1" Margin="0,0,10,10" />
                            <TextBox Text="{Binding SelectedClient.ClientAddress}" x:Name="clientAddress" Grid.Column="1" Grid.Row="2" FontSize="18"  VerticalContentAlignment="Center" BorderThickness="0,0,0,2" BorderBrush="#FF41B1E1" Margin="0,0,10,10" />
                            <TextBox Text="{Binding SelectedClient.ClientEmail}" x:Name="clientEmail" Grid.Column="1" Grid.Row="3" FontSize="18"  VerticalContentAlignment="Center" BorderThickness="0,0,0,2" BorderBrush="#FF41B1E1" Margin="0,0,10,10" />
                            <Button Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="40" Width="40" Content="SAVE" BorderBrush="#FF00BD11" FontSize="10" BorderThickness="3" Foreground="#FF858585" FontWeight="ExtraBlack" VerticalContentAlignment="Center" Click="UpdateClientClick" Margin="0,0,0,0" />
                            <Button Grid.Row="2" Grid.RowSpan="2" Grid.Column="2" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="40" Width="40" Content="DEL" BorderBrush="#FFBF0202" FontSize="10" BorderThickness="3" Foreground="#FF858585" FontWeight="ExtraBlack" VerticalContentAlignment="Center" Click="DeleteClientClick" Margin="0,15,0,0" />

                        </Grid>
                    </Border>
                </Grid>
            </Controls:MetroTabItem>
