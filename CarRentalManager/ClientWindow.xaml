                                                <Label Content="{Binding StartDate}" Grid.Row="5" FontWeight="Bold"  FontSize="22" HorizontalContentAlignment="Center" Foreground="#FF115E7E"></Label>
                                                <Label Content="End date" Grid.Row="6" FontWeight="Bold"  FontSize="26" HorizontalContentAlignment="Center" Foreground="#FF7E7E7E"></Label>
